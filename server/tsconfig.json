{
  "compilerOptions": {
    "module": "ESNext",  // Ensure the module system is ESNext
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",  // Ensure output goes to 'dist'
    "rootDir": "./src",  // Set the source folder
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}